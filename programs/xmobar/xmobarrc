        --                      , "--low"      , "darkgreen"
        --                      , "--normal"   , "darkorange"
        --                      , "--high"     , "darkred"
        --                      ] 10

        -- -- cpu activity monitor
        -- , Run MultiCpu       [ "--template" , "Cpu: <total0>%|<total1>%"
        --                      , "--Low"      , "50"         -- units: %
        --                      , "--High"     , "85"         -- units: %
        --                      , "--low"      , "darkgreen"
        --                      , "--normal"   , "darkorange"
        --                      , "--high"     , "darkred"
