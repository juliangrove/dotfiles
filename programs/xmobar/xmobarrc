Config {

   -- appearance
     font =             "xft:SFNS Display:size=11,FontAwesome"
   , additionalFonts = [ "xft:Book:size=11:antialiasing=true"
                       , "xft:Courier:size=12:antialiasing=true" ]
   , bgColor =          "black"
   , alpha =            0
   , fgColor =          "white"
   , position =         TopW C 97
   , border =           NoBorder
   , borderColor =      "#646464"

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "<fn=1>%StdinReader%</fn>}{%vol%      %bright%      %wlp0s20f3wi%      %battery%      %date%"

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
